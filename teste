import subprocess
from PySimpleGUI import PySimpleGUI as sg

#layout
sg.theme('DarkAmber')
layout = [
    [sg.Button('D20', size=(3, 2)),sg.Button('D12', size=(3, 2)),sg.Button('D10', size=(3, 2)),
     sg.Button('D08', size=(3, 2)),sg.Button('D06', size=(3, 2)),sg.Button('D04', size=(3, 2))],
    [sg.Output(size=(90, 50,))] # elemento Output
]
#Janela
janela = sg.Window('Roll Dice',layout, size=(1000, 500))
#Eventos
while True:
    eventos, valores = janela.read()
    if eventos == sg.WINDOW_CLOSED:
        break
    if eventos == 'D20':
        #executar o script Dado D20
        resultado = subprocess.run(['python3', '/home/suporteti/Documentos/Lucas Marchiori/Programação/Games/RollDice_Python/Roll_Dice/Dado D20.py'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
        print(resultado.stdout)
        print(resultado.stderr)
    if eventos == 'D12':
        #executar o script Dado D12
        resultado = subprocess.run(['python3', '/home/suporteti/Documentos/Lucas Marchiori/Programação/Games/RollDice_Python/Roll_Dice/Dado D12.py'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
        print(resultado.stdout)
        print(resultado.stderr)
    if eventos == 'D10':
        #executar o script Dado D10
        resultado = subprocess.run(['python3', '/home/suporteti/Documentos/Lucas Marchiori/Programação/Games/RollDice_Python/Roll_Dice/Dado D10.py'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
        print(resultado.stdout)
        print(resultado.stderr)
    if eventos == 'D08':
        #executar o script Dado D08
        resultado = subprocess.run(['python3', '/home/suporteti/Documentos/Lucas Marchiori/Programação/Games/RollDice_Python/Roll_Dice/Dado D8.py'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
        print(resultado.stdout)
        print(resultado.stderr)
    if eventos == 'D06':
        #executar o script Dado D06
        resultado = subprocess.run(['python3', '/home/suporteti/Documentos/Lucas Marchiori/Programação/Games/RollDice_Python/Roll_Dice/Dado D6.py'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
        print(resultado.stdout)
        print(resultado.stderr)
   
